<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_item_kkn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ContentDescription"
            tools:src="@color/grey_200" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title_kkn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:gravity="start"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/tv_date_kkn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_img"
        app:layout_constraintTop_toTopOf="@id/card_img"
        tools:text="Pembuatan Hidroponik" />

    <TextView
        android:id="@+id/tv_date_kkn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/grey_200"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/tv_title_kkn"
        app:layout_constraintStart_toStartOf="@id/tv_title_kkn"
        app:layout_constraintTop_toBottomOf="@id/tv_title_kkn"
        tools:text="Senin, 19 Juli 2021" />

</androidx.constraintlayout.widget.ConstraintLayout>
